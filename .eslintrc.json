{
	"env": {
		"es6": true,
		"node": true,
		"browser": true
	},
	"extends": ["airbnb-base"],
	"globals": {
		"Atomics": "readonly",
		"SharedArrayBuffer": "readonly"
	},
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module"
	},
	"rules": {
		"indent": ["error", "tab"],
		"no-tabs": ["error", { "allowIndentationTabs": true }],
		"no-unused-vars": 0,
		"no-undef": "off",
		"quotes": ["error", "double"],
		"no-param-reassign": [2, { "props": false }],
		"max-len": 0,
		"linebreak-style": "off",
		"no-use-before-define": "off"
	}
}
